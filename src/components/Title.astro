---
interface Props {
  type?: "h2" | "h3";
  class?: string;
}

const { type, class: className } = Astro.props;

const fontSize = {
  h2: "text-4xl",
  h3: "text-2xl",
};
---

<h1
  class:list={[
    "leading-none text-primaryOrange font-medium",
    type ? fontSize[type] : "text-6xl",
    className,
  ]}
>
  <slot />
</h1>
