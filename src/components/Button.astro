---
interface Props {
  id: string;
  class?: string;
  active?: boolean;
}

const { id, class: className, active = false } = Astro.props;
---

<button
  id={id}
  class:list={[
    "w-[120px] max-h-14 p-4 capitalize text-slate-50 text-xl",
    active && "bg-primaryPurple text-slate-50",
    className,
  ]}
>
  <slot />
</button>
