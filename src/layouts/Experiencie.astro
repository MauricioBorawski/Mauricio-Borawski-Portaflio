---
import Experience from "../components/TimelineExperience.astro";
import Briefcase from "../components/Icons/Briefcase.astro";
import { experiences } from "../constants";
---

<section id="experience" class="my-20 py-4">
  <div class="mb-8 inline-flex gap-2 items-center justify-center">
    <Briefcase />
    <h2 class="text-3xl">Experience</h2>
  </div>
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {experiences.map((experience) => <Experience {...experience} />)}
  </ol>
</section>
